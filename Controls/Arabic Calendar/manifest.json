      "initialvalue": "",
      "changesdisplay": true
    },
    {
      "id": "Watermark",
      "refreshdisplay": "true",
      "friendlyname": "Watermark",
      "type": "string",
      "inputlength": "255",
      "initialvalue": "انقر لتحديد التاريخ",
      "changesdisplay": true
    },
    {
      "id": "IsReadOnly",
      "refreshdisplay": "true",
      "friendlyname": "Read-Only",
      "type": "bool",
      "initialvalue": "false",
      "changesdisplay": true
    },
    {
      "id": "AllowManualInput",
      "refreshdisplay": "true",
      "friendlyname": "Allow Manual Input",
      "type": "bool",
      "initialvalue": "true",
      "changesdisplay": true
    },
    {
      "id": "DateFormat",
      "refreshdisplay": "true",
      "friendlyname": "Date Format",
      "type": "drop",
      "dropitems": [
        {"value": "dd/MM/yyyy", "text": "Day/Month/Year (dd/MM/yyyy)"},
        {"value": "MM/dd/yyyy", "text": "Month/Day/Year (MM/dd/yyyy)"},
        {"value": "yyyy-MM-dd", "text": "Year-Month-Day (yyyy-MM-dd)"}
      ],
      "initialvalue": "dd/MM/yyyy",
      "changesdisplay": true
