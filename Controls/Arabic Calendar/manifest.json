  "supports": [
    "Value",
    "Width",
    "IsVisible",
    "IsEnabled",
    "IsReadOnly"
  ],
  "events": [
    {
      "id": "Changed",
      "description": "Fires when the selected date changes"
    },
    {
      "id": "Focus",
      "description": "Fires when the control receives focus"
    },
    {
      "id": "Blur",
      "description": "Fires when the control loses focus"
    },
    {
      "id": "ValidationError",
      "description": "Fires when date validation fails"
    }
